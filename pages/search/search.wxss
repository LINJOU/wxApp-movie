@import "../../common/wxss/font";

.search {
  position: relative;
  width: 750rpx;
}
.search-content {
  width: 100%;
}
.wrapper {
  position: relative;
  width: 100%;
  height: calc(100vh - 80rpx);
}
.search-history, .search-result {
  width: 100%;
  height: 100%;
}

.search-history {
  padding: 32rpx;
  box-sizing: border-box;
}

.title {
  display: flex;
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  padding-right: 12rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.txt, .icon-icon-- {
  font-size: 40rpx;
}

.searchHistory-content {
  width: 100%;
  margin-top: 40rpx;
}

.searchHistory-item {
  display: inline-block;
  margin: 0 12rpx 20rpx 0;
  padding: 8rpx 20rpx;
  border: 2rpx solid #BBB;
  border-radius: 16rpx;
  font-size: 36rpx;
  color: #BBB;
}

.search-result {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 40rpx 32rpx 0 32rpx;
  box-sizing: border-box;
}

.noResult {
  width: 100%;
  height: 44rpx;
  margin-top: 50%;
  line-height: 44rpx;
  font-size: 40rpx;
  color: #BBB;
  text-align: center;
  transform: translateY(-50%);
}

.icon-guanbi {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 40rpx;
  color: #05B512;
  padding: 0 0 12rpx 12rpx;
}