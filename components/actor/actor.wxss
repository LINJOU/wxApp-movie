@import "../../common/wxss/font.wxss";

.actor-scroll {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.list-content {
  position: relative;
  display: flex;
  justify-content: flex-start;
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #E3E3E4;
  overflow: hidden;
}

.list-content:last-child {
  border: none;
}

.image {
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 170rpx;
  background-repeat: no-repeat;
  background-size: 120rpx 170rpx;
}

.name {
  flex: 1;
  margin: 40rpx 0 0 20rpx;
  font-size: 40rpx;
  color: #808080;
}

.icon-guanbi {
  position: absolute;
  top: 0;
  right: 0;
  padding: 16rpx 0 16rpx 16rpx;
  font-size: 40rpx;
  color: #ccc;
}