@import "../../common/wxss/font.wxss";

.scroll {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.list-content {
  position: relative;
  display: flex;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 2rpx solid #E3E3E4;
  overflow: hidden;
}
.list-content:last-child {
  border: none;
}
.item-lf {
  flex: 0 0 160rpx;
  position: relative;
  width: 160rpx;
  margin: 24rpx 0;
  background-repeat: no-repeat;
  background-size: 160rpx 228rpx
}
.item-lf::before{
  content: "";
  display: block;
  padding-top: 143%;
}
.item-rt {
  margin-left: 20rpx;
  padding: 24rpx 0;
  overflow: hidden;
}
.title {
  font-size: 32rpx;
  margin-top: 8rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.item-rt-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.director, .actor, .watched, .noRating {
  font-size: 28rpx;
  color: #666;
}
/* 强制不换行，超出省略号代替 */
.line-ellipsis {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.star-content {
  display: inline-block;
  margin-right: 8rpx;
}
.score {
  font-size: 28rpx;
  font-weight: bold;
  color: #FAAF00;
}
.count {
  font-weight: bold;
  color: #FAAF00;
}
.noRating {
  margin-top: 12rpx;
}

.icon-guanbi {
  position: absolute;
  top: 0;
  right: 0;
  padding: 16rpx 0 16rpx 16rpx;
  font-size: 40rpx;
  color: #ccc;
}