@import "../../common/wxss/font";

.tag {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #CCC;
}

.icon-sanjiaoxing-left, .icon-sanjiaoxing-right {
  font-size: 40rpx;
  padding: 0 16rpx;
  color: #05B512;
}

.tag-list {
  width: 600rpx;
  height: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.tag-item {
  display: inline-block;
  width: auto;
  height: 100%;
  font-size: 36rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #BBB;
}