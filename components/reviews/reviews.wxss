.reviews {
  width: 100%;
}

.reviews-content {
  width: 100%;
  padding: 28rpx 0;
  box-sizing: border-box;
}

.reviews-title {
  font-size: 32rpx;
  color: #111111;
  padding-bottom: 12rpx;
}

.reviews-user {
  width: 100%;
  height: 36rpx;
  padding-bottom: 12rpx;
  line-height: 36rpx;
}

.reviews-user-name {
  display: inline-block;
  margin-right: 12rpx;
  font-size: 28rpx;
  color: #111111;
}

.reviews-user-rating {
  display: inline-block;
}

.reviews-text, .reviews-agree {
  font-size: 28rpx;
  color: #808080;
  text-align: justify;
  text-justify:inter-ideograph;
  padding-bottom: 8rpx;
}

.reviews-agree {
  padding: 0;
}
