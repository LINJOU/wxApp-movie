.switches {
  display: flex;
  align-content: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #E3E3E4;
  box-sizing: border-box;
}
.switch-item {
  flex: 1;
  text-align: center;
  color: #666666;
}
.text {
  box-sizing: border-box;
  padding: 0 8rpx 12rpx;
  font-size: 40rpx;
}
.active {
  color: #05B512;
  border-bottom: 6rpx solid #05B512;
}